<div class="well">
    <h3>Request an invitation</h3>
    <% if (submissionFailed) { %>
        <div class="alert alert-danger">
            Oops, something went wrong! Please try again.
        </div>
    <% } %>
    <form action="submit_invite_request" method="post">
        <div class="form-group">
            <label>
                Name(s)
            </label>
            <input class="text_input form-control" type="text" name="names" />
        </div>
        <div class="form-group">
            <label>
                Email
            </label>
            <input class="text_input form-control" type="text" name="email" />
        </div>
        <input type="submit" class="btn btn-primary btn-raised">
    </form>
</div>
